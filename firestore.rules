rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection rules
    match /users/{userId} {
      // Anyone authenticated can read any user profile
      allow read: if isAuthenticated();
      
      // Users can only create/update their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
    }
    
    // Conversations collection rules
    match /conversations/{conversationId} {
      // Admins can read all conversations
      // Clients can only read their own conversation
      allow read: if isAdmin() || 
                     (isAuthenticated() && conversationId == 'conv_' + request.auth.uid);
      
      // Anyone authenticated can create a conversation
      allow create: if isAuthenticated();
      
      // Admins can update any conversation
      // Clients can update their own conversation
      allow update: if isAdmin() || 
                       (isAuthenticated() && conversationId == 'conv_' + request.auth.uid);
    }
    
    // Messages collection rules
    match /messages/{messageId} {
      // Admins can read all messages
      // Clients can only read messages in their conversation
      allow read: if isAdmin() || 
                     (isAuthenticated() && 
                      resource.data.conversationId == 'conv_' + request.auth.uid);
      
      // Anyone authenticated can create messages, but senderId must match their UID
      allow create: if isAuthenticated() && 
                       request.resource.data.senderId == request.auth.uid;
      
      // Only admins can update messages (for marking as read)
      allow update: if isAdmin();
    }
    
    // Typing status collection rules
    match /typing/{typingId} {
      // Anyone authenticated can read typing status
      allow read: if isAuthenticated();
      
      // Anyone authenticated can write their own typing status
      allow write: if isAuthenticated();
    }
  }
}
